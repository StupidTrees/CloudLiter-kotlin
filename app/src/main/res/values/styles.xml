<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryLight">@color/friendBubbleColor</item>
        <item name="colorPrimaryDisabled">@color/colorPrimaryDisabled</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColorBottom">#FFFFFFFF</item>
        <item name="backgroundColorBottomAsTint">#CFFFFFFF</item>
        <item name="backgroundColorSecond">#FFFAFAFA</item>
        <item name="backgroundColorSecondAsTint">#CFFAFAFA</item>
        <item name="textColorPrimary">#FF000000</item>
        <item name="textColorSecondary">#FF808080</item>
        <item name="colorControlDisabled">#FFE0E0E0</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 欢迎页的风格 -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>