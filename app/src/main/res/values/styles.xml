<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDisabled">@color/colorPrimaryDisabled</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColorBottom">#FFFFFFFF</item>
        <item name="backgroundColorBottomAsTint">#CFFFFFFF</item>
        <item name="backgroundColorSecond">#FFFAFAFA</item>
        <item name="backgroundColorSecondAsTint">#CFFAFAFA</item>
        <item name="textColorPrimary">#FF000000</item>
        <item name="textColorSecondary">#FF808080</item>
        <item name="colorControlDisabled">#FFE0E0E0</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <!-- 欢迎页的风格 -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
        <!-- <item name="android:windowIsTranslucent">true</item> -->
        <!-- 透明背景不要了 -->
    </style>

<!--    圆角透明背景的BottomSheetDialog主题-->
    <style name="TransparentBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
         
        <item name="bottomSheetStyle">@style/TransparentBottomSheetStyle</item>
    </style>
    <style name="TransparentBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">400dp</item>
    </style>


<!--    按钮圆形小水波的效果-->
    <style name="ripplePrimarySmall">
        <item name="android:colorControlHighlight">?attr/colorPrimary</item>
        <item name="android:radius">16dp</item>
    </style>
    <style name="ripplePrimaryTiny">
        <item name="android:colorControlHighlight">?attr/colorPrimary</item>
        <item name="android:radius">12dp</item>
    </style>
    <style name="rippleControl">
        <item name="android:radius">24dp</item>
    </style>
    <style name="rippleControlSmall">
        <item name="android:radius">16dp</item>
    </style>

</resources>