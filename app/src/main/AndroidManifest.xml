<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.stupidtree.cloudliter">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" /> <!-- 解锁屏幕需要的权限 -->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" /> <!-- 申请电源锁需要的权限 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- 震动权限 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".HiApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/AppTheme"
        tools:targetApi="q">
        <activity android:name=".ui.qrcode.QRCodeActivity" />
        <activity android:name=".ui.group.GroupEditorActivity" />
        <activity android:name=".ui.relationevent.RelationEventActivity" /> <!-- 不加↑这两行，裁剪没法用 -->
        <activity
            android:name=".ui.conversation.ConversationActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.myprofile.MyProfileActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.widgets.PhotoDetailActivity" />
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.search.SearchActivity"
            android:windowSoftInputMode="adjustPan|stateVisible" />
        <activity
            android:name=".ui.chat.ChatActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name=".ui.welcome.WelcomeActivity"
            android:label="@string/title_activity_welcome"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" />
        <activity android:name=".ui.imagedetect.ImageDetectActivity" />
        <activity android:name=".ui.wordcloud.WordCloudActivity" />
        <activity android:name=".ui.face.MyFaceActivity" />
        <activity android:name=".ui.gallery.album.AlbumActivity" />
        <activity android:name=".ui.gallery.scene.ScenesActivity" />
        <activity android:name=".ui.accessibility.AccessibilityActivity" />
        <activity android:name=".ui.gallery.faces.FriendFacesActivity" />
        <activity android:name=".ui.face.permission.FaceWhiteListActivity" />

        <service android:name=".service.socket.SocketIOClientService" />
    </application>

</manifest>